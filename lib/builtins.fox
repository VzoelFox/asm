    tutup_jika
    jika (syscall_num == 9)   ; mmap - OK
        kembalikan 1
    tutup_jika
    jika (syscall_num == 11)  ; munmap - OK
        kembalikan 1
    tutup_jika
    jika (syscall_num == 60)  ; exit - OK
        kembalikan 1
    tutup_jika
    
    ; SECURITY: Block dangerous syscalls
    kembalikan 0  ; Reject unknown/dangerous syscalls
tutup_fungsi

