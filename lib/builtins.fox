### 506
; === STRING OPERATIONS (BUILTIN) ===
fungsi str_len(s)
    var len = 0
    var ptr = s
    selama (1)
        var ch = 0
        asm_mulai
        mov rbx, [var_ptr]
        mov al, [rbx]
        mov [var_ch], rax
        tutup_asm
        jika (ch == 0)
            kembalikan len
        tutup_jika
        len = len + 1
        ptr = ptr + 1
    tutup_selama
tutup_fungsi

